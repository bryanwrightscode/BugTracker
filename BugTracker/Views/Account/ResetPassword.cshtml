@model BugTracker.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
@{
    Layout = "~/Views/Shared/_LoggedOut.cshtml";
}

<nav class="navbar navbar-transparent navbar-absolute">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <p class="navbar-brand navbar-text">Bug Tracker</p>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Register", "Register")
                </li>
                <li>
                    @Html.ActionLink("Login", "Login")
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="wrapper wrapper-full-page">
    <div class="full-page login-page" data-color="" data-image="/Assets/img/background/background-1.jpg">
        <!--   you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple" -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card" data-background="color" data-color="blue">
                                <div class="card-header">
                                    <h3 class="card-title">Reset password</h3>
                                </div>
                                <div class="card-content">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Code)
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-fill btn-wd">Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        }
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer footer-transparent">
            <div class="container">
                <div class="copyright" style="white-space:normal; padding: 10px 30px;">
                    &copy;
                    <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="https://bwright-blog.azurewebsites.net">Bryan Wright</a>
                </div>
                <div class="copyright" style="white-space:normal; padding: 10px 30px;">
                    <p style="text-align:center; color:#FFFFFF;font-size:14px;">Weaving by <strong><a href="https://thenounproject.com/TheGreenChicken/" style="color:#FFFFFF;font-size:14px" target="_blank">Lisa Staudinger</a></strong> from the Noun Project</p>
                </div>
            </div>
        </footer>
    </div>
</div>
@section Scripts {
    <script src="~/Assets/js/demo.js"></script>
    <script type="text/javascript">
        $().ready(function () {
            demo.checkFullPageBackgroundImage();

            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('.card').removeClass('card-hidden');
            }, 700)
        });
    </script>
}



@model BugTracker.Models.AdminIndexViewModel
@{
    ViewBag.Title = "Users";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-content">
            <h2 class="sub-header">All Users</h2>
            <div class="fresh-datatables">
                <table class="table table-hover table-striped" id="usersTable">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Roles
                            </th>
                            <th class="disabled-sorting"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Email)
                                </td>
                                <td>
                                    @foreach (var role in item.UserRoles)
                {
                                        <span class="label label-default">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (item.User.PowerUser != true)
                                    {
                                        @Html.ActionLink("Edit Roles", "EditUserRoles", new { id = item.User.Id })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>

            </div>
        </div>
    </div>
</div><!--  end card  -->

@section Scripts {
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () { $('#usersTable').DataTable(); });
    </script>
}

@model IEnumerable<BugTracker.Models.CodeFirst.Ticket>
@{
    ViewBag.Title = "Tickets";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-content">
            <div class="fresh-datatables">
                <table class="table table-hover table-striped" cellspacing="0" width="100%" style="width: 100%" id="tickets">
                    <thead>
                        <tr>
                            <th>Ticket</th>
                            <th>Created</th>
                            <th>Assignee</th>
                            <th>Submitter</th>
                            <th>Project</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th class="disabled-sorting"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Tickets", new { id = item.Id })">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AssignToUser.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OwnerUser.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @if (Request.IsAuthenticated && User.IsInRole("Submitter"))
    {
        <a class="btn btn-icon btn-fill btn-success" href="@Url.Action("Create", "Tickets")" style="margin-bottom: 20px;">
            <i class="ti-plus"></i>
        </a>
    }
</div>
@section Scripts {
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () { $('#tickets').DataTable(); });
    </script>
}


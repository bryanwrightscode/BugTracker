@model BugTracker.Models.AddProfilePictureViewModel
@{
    ViewBag.Title = "AddProfilePicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddProfilePicture", "Manage", FormMethod.Post, new { enctype = "Multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="card-header">
        <h4 class="card-title">Add Profile Picture</h4>
    </div>
    <div class="card-content">
        <div class="form-group">
            @Html.LabelFor(m => m.File, htmlAttributes: new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <input name="File" type="file" class="form-control" />
                @Html.ValidationMessageFor(m => m.File, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="form-group">
            <label class="col-md-3"></label>
            <div class="col-md-9">
                <button class="btn btn-info btn-fill" type="submit">Upload</button>
            </div>
        </div>
    </div>
}


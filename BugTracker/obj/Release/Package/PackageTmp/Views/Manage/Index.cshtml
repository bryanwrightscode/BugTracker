            </div>
            <hr>
            <div class="text-center">
                <div class="row">
                    <div class="col-md-3 col-md-offset-1">
                        <h5>
                            @Model.CurrentUser.Projects.Count()
                            <br />
                            <small>
                                Projects
                            </small>
                        </h5>
                    </div>
                    <div class="col-md-4">
                        <h5>
                            @Model.CurrentUser.Histories.Count()
